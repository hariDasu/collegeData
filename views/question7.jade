extends bootstrap

block content

    h1 Colleges.
    h3 Ranked by Net Assets per Student (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th Name of School
                    th Number of Students
                    th Total Net Assets
                    th Net Assets per Student
            tbody
            each college, i in question7
                tr
                    td #{college.unitId}
                    td #{college.instName}
                    td #{college.totStudents}
                    td $#{college.totAss}
                    td $#{college.netAssPerStudent}


