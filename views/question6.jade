extends bootstrap

block content

    h1 Colleges.
    h3 Ranked by Total Revenues per Student (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th College Name
                    th Revenues
            tbody
            each college, i in question6
                tr
                    td #{college.UNITID}
                    td #{college.INSTNM}
                    td #{college.F1A13}


