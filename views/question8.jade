extends bootstrap

block content

    h1 Colleges.
    h3 Ranked by Liabilities per Student (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th Name of School
                    th Year
                    th Number of Students
                    th Total Liabilities
                    th Liabilities per Student
            tbody
            each college, i in finalResults
                tr
                    td #{college.UNITID}
                    td #{college.INSTNM}
                    td #{college.YEAR}
                    td #{college.STUDS}
                    td #{college.STAT}
                    td #{college.STAT_PER_STUD}
