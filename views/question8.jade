extends bootstrap

block content

    h1 Colleges.
    h3 Ranked by Liabilities per Student (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th Name of School
                    th Number of Students
                    th Total Liabilities
                    th Liabilities per Student
            tbody
            each college, i in question8
                tr
                    td #{college.unitId}
                    td #{college.instName}
                    td #{college.totStudents}
                    td $#{college.totLiabilities}
                    td $#{college.liabilitiesPerStudent}


