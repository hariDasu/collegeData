extends bootstrap

block content
    h1 Colleges.
    h3 Ranked by Total Revenues (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th College Name
                    th Total Revenues
            tbody
            each college, i in question5
                tr
                    td #{college.UNITID}
                    td #{college.INSTNM}
                    td #{college.F1D01}


