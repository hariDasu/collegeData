extends bootstrap

block content

    h1 Colleges.
    h3 Ranked by # of Students (descending)
    div.nicetable
        table#table.table-hover.table-bordered
            thead
                tr
                    th University ID
                    th College Name
                    th Year
                    th Enrollment
            tbody
            each college, i in question1
                tr
                    td #{college.UNITID}
                    td #{college.INSTNM}
                    td #{college.YEAR}
                    td #{college.EFYTOTLT}


